<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home</title>
</head>
<body>
    <h3>Code editor</h3>
    <form action="/run" method="post">
        <select name="lang" id="lang">
            <option value="<%=lang%>" selected><%=lang%></option>
            <%langlist.forEach((item)=>{
                if(item===lang)%>
                    <option value="<%=item%>"><%=item%></option>
                <%
            });%>
        </select>
        <br>
        <textarea name="code" id="code" cols="50" rows="10"><%=code%></textarea>
        <br>
        <textarea name="input" id="input" cols="30" rows="5"></textarea>
        <button type="submit" id="submit">Run</button>
    </form>
    <script>
        let select = document.querySelector("#lang");
        select.addEventListener("change", ()=>{
            window.open(`/${select.value}`, "_self")
        })
    </script>
</body>
</html>